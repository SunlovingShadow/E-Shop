<!-- /views/shared/includes/footer.ejs -->
<footer class="footer">
    <style>
        /* Footer Styles */
        .footer {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 2rem 0;
            font-size: 0.9rem;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            max-width: 1200px;
            margin: auto;
            padding: 0 1rem;
        }

        .footer-section {
            flex: 1;
            min-width: 250px;
            margin: 1rem 0;
        }

        .footer-logo {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        .footer-section.about p {
            line-height: 1.6;
        }

        .footer-section.links ul {
            list-style: none;
            padding: 0;
        }

        .footer-section.links ul li {
            margin-bottom: 0.5rem;
        }

        .footer-section.links ul li a {
            color: #ecf0f1;
            transition: color 0.3s ease;
        }

        .footer-section.links ul li a:hover {
            color: #1abc9c;
        }

        .footer-section.contact-form form {
            display: flex;
            flex-direction: column;
        }

        .footer-section.contact-form input,
        .footer-section.contact-form textarea {
            padding: 0.8rem;
            margin-bottom: 0.5rem;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
        }

        .footer-section.contact-form button {
            align-self: flex-start;
            padding: 0.8rem 1.5rem;
            background-color: #1abc9c;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: #fff;
            transition: background-color 0.3s ease;
            font-size: 1rem;
        }

        .footer-section.contact-form button:hover {
            background-color: #16a085;
        }

        .socials {
            margin-top: 1rem;
        }

        .social-icon {
            display: inline-block;
            margin-right: 0.5rem;
            color: #ecf0f1;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

        .social-icon:hover {
            color: #1abc9c;
        }

        .footer-bottom {
            text-align: center;
            margin-top: 2rem;
            border-top: 1px solid #34495e;
            padding-top: 1rem;
            font-size: 0.8rem;
            color: #bdc3c7;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .footer-container {
                flex-direction: column;
                align-items: center;
            }

            .footer-section {
                text-align: center;
            }
        }
    </style>

    <div class="footer-container">
        <div class="footer-section about">
            <h2 class="footer-logo">
                <%= appName %>
            </h2>
            <p>
                <%= appName %> is your trusted online store for the best products at the best prices. We are committed
                    to providing high-quality products and exceptional customer service.
            </p>
            <div class="socials">
                <!-- Social Media Icons (Optional) -->
                <a href="#" class="social-icon" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-icon" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" class="social-icon" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div class="footer-section links">
            <h3>Quick Links</h3>
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/privacy">Privacy Policy</a></li>
                <li><a href="/terms">Terms of Service</a></li>
            </ul>
        </div>
        <div class="footer-section contact-form">
            <h3>Contact Us</h3>
            <form action="/contact" method="POST">
                <input type="email" name="email" placeholder="Your Email" required>
                <textarea name="message" placeholder="Your Message" rows="3" required></textarea>
                <button type="submit" class="btn">Send</button>
            </form>
        </div>
    </div>
    <div class="footer-bottom">
        &copy; <%= new Date().getFullYear() %>
            <%= appName %>. All rights reserved.
    </div>
</footer>