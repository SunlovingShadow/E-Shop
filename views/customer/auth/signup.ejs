<!-- /views/customer/auth/signup.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../shared/includes/head', { pageTitle: 'Sign Up - ' + appName }) %>
        <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
    <%- include('../../shared/includes/header') %>
        <main class="auth-container">
            <div class="auth-wrapper">
                <div class="auth-image">
                    <img src="/images/signup-illustration.svg" alt="Signup Illustration">
                </div>
                <div class="auth-form">
                    <h2>Create an Account with <%= appName %>
                    </h2>
                    <% if (inputData.errorMessage) { %>
                        <div class="error-message">
                            <p>
                                <%= inputData.errorMessage %>
                            </p>
                        </div>
                        <% } %>
                            <form action="/signup" method="POST">
                                <div class="form-group">
                                    <label for="name"><i class="fas fa-user"></i> Full Name</label>
                                    <input type="text" id="name" name="name" required
                                        value="<%= inputData.name || '' %>">
                                </div>
                                <div class="form-group">
                                    <label for="email"><i class="fas fa-envelope"></i> Email</label>
                                    <input type="email" id="email" name="email" required
                                        value="<%= inputData.email || '' %>">
                                </div>
                                <div class="form-group">
                                    <label for="password"><i class="fas fa-lock"></i> Password</label>
                                    <input type="password" id="password" name="password" required>
                                    <span class="toggle-password"><i class="fas fa-eye"></i></span>
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
                                    <input type="password" id="confirmPassword" name="confirmPassword" required>
                                    <span class="toggle-password"><i class="fas fa-eye"></i></span>
                                </div>
                                <div class="form-options">
                                    <div class="remember-me">
                                        <input type="checkbox" id="agree" name="agree" <%=inputData.agree ? 'checked'
                                            : '' %>>
                                        <label for="agree">I agree to the <a href="/terms">Terms and
                                                Conditions</a></label>
                                    </div>
                                </div>
                                <button type="submit" class="btn-primary">
                                    Sign Up
                                    <% if (inputData.isLoading) { %>
                                        <span class="spinner"></span>
                                        <% } %>
                                </button>
                            </form>
                            <div class="switch-form">
                                <p>Already have an account? <a href="/login">Login</a></p>
                            </div>
                </div>
            </div>
        </main>
        <%- include('../../shared/includes/footer') %>
            <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
            <script src="/scripts/auth.js"></script>
</body>

</html>